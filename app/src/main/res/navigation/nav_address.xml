<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_address"
    app:startDestination="@id/userAddressesBottomSheet">

    <dialog
        android:id="@+id/userAddressesBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.address.UserAddressesBottomSheet"
        android:label="UserAddressesBottomSheet"
        tools:layout="@layout/bottom_sheet_user_addresses">
        <argument
            android:name="isClickable"
            app:argType="boolean" />
        <action
            android:id="@+id/to_createAddressFragment"
            app:destination="@id/createAddressFragment" />
    </dialog>

    <fragment
        android:id="@+id/createAddressFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.address.CreateAddressFragment"
        android:label="@string/title_create_address"
        tools:layout="@layout/fragment_create_address" />

</navigation>