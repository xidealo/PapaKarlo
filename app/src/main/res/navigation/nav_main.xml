<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <!-- MAIN -->

    <action
        android:id="@+id/global_consumerCartFragment"
        app:destination="@id/consumerCartFragment" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/to_updateFragment"
            app:destination="@id/updateFragment" />
        <action
            android:id="@+id/to_selectCityFragment"
            app:destination="@id/selectCityFragment" />
        <action
            android:id="@+id/to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>

    <fragment
        android:id="@+id/updateFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.UpdateFragment"
        android:label="UpdateFragment"
        tools:layout="@layout/fragment_update" />

    <fragment
        android:id="@+id/selectCityFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.SelectCityFragment"
        android:label="SelectCityFragment"
        tools:layout="@layout/fragment_select_city">
        <action
            android:id="@+id/to_menuFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/selectCityFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- CAFE LIST -->

    <fragment
        android:id="@+id/cafeListFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.cafe.CafeListFragment"
        android:label="@string/title_cafe_list"
        tools:layout="@layout/fragment_cafe_list">
        <action
            android:id="@+id/to_cafeOptionsBottomSheet"
            app:destination="@id/cafeOptionsBottomSheet" />
    </fragment>

    <dialog
        android:id="@+id/cafeOptionsBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.cafe.CafeOptionsBottomSheet"
        android:label="CafeOptionsBottomSheet"
        tools:layout="@layout/bottom_sheet_cafe_options">
        <argument
            android:name="cafeUuid"
            app:argType="string" />
    </dialog>

    <!-- MENU -->

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.menu.MenuFragment"
        android:label="@string/title_menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/to_productFragment"
            app:destination="@id/productFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/productFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.menu.ProductFragment"
        android:label="{menuProductName}"
        tools:layout="@layout/fragment_product">
        <argument
            android:name="menuProductUuid"
            app:argType="string" />
        <argument
            android:name="menuProductName"
            app:argType="string" />
        <argument
            android:name="photoLink"
            app:argType="string" />
    </fragment>

    <!-- PROFILE -->

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
        <action
            android:id="@+id/to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/to_createAddressFragment"
            app:destination="@id/createAddressFragment" />
        <action
            android:id="@+id/to_nav_address"
            app:destination="@id/nav_address">
            <argument
                android:name="isClickable"
                app:argType="boolean" />
        </action>
        <action
            android:id="@+id/to_ordersFragment"
            app:destination="@id/ordersFragment" />
        <action
            android:id="@+id/to_paymentBottomSheet"
            app:destination="@id/paymentBottomSheet" />
        <action
            android:id="@+id/to_feedbackBottomSheet"
            app:destination="@id/feedbackBottomSheet" />
        <action
            android:id="@+id/to_loginFragment"
            app:destination="@id/nav_login">
            <argument
                android:name="successLoginDirection"
                app:argType="com.bunbeauty.presentation.enums.SuccessLoginDirection" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.profile.order.OrderDetailsFragment"
        android:label="{orderCode}"
        tools:layout="@layout/fragment_order_details">
        <argument
            android:name="orderUuid"
            app:argType="string" />
        <argument
            android:name="orderCode"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.profile.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/to_oneLineActionBottomSheet"
            app:destination="@id/oneLineActionBottomSheet" />
        <action
            android:id="@+id/to_citySelectionBottomSheet"
            app:destination="@id/citySelectionBottomSheet" />
        <action
            android:id="@+id/to_logoutBottomSheet"
            app:destination="@id/logoutBottomSheet" />
    </fragment>

    <fragment
        android:id="@+id/createAddressFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.address.CreateAddressFragment"
        android:label="@string/title_create_address"
        tools:layout="@layout/fragment_create_address" />

    <include app:graph="@navigation/nav_address" />

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.profile.order.OrdersFragment"
        android:label="@string/title_orders"
        tools:layout="@layout/fragment_orders">
        <argument
            android:name="userUuid"
            app:argType="string" />
        <action
            android:id="@+id/to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>

    <dialog
        android:id="@+id/paymentBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.profile.PaymentBottomSheet"
        android:label="PaymentBottomSheet"
        tools:layout="@layout/bottom_sheet_payment" />

    <dialog
        android:id="@+id/feedbackBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.profile.FeedbackBottomSheet"
        android:label="FeedbackBottomSheet"
        tools:layout="@layout/bottom_sheet_feedback" />

    <include app:graph="@navigation/nav_login" />

    <dialog
        android:id="@+id/oneLineActionBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.OneLineActionBottomSheet"
        android:label="OneLineActionBottomSheet"
        tools:layout="@layout/bottom_sheet_one_line_action">
        <argument
            android:name="oneLineActionModel"
            app:argType="com.bunbeauty.domain.model.OneLineActionModel" />
    </dialog>

    <dialog
        android:id="@+id/citySelectionBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.profile.settings.CitySelectionBottomSheet"
        android:label="CitySelectionBottomSheet"
        tools:layout="@layout/bottom_sheet_city_selection" />

    <dialog
        android:id="@+id/logoutBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.profile.settings.LogoutBottomSheet"
        android:label="LogoutBottomSheet"
        tools:layout="@layout/bottom_sheet_logout">
        <action
            android:id="@+id/back_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </dialog>

    <!-- CART -->

    <fragment
        android:id="@+id/consumerCartFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.cart.ConsumerCartFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_consumer_cart">
        <action
            android:id="@+id/to_createOrderFragment"
            app:destination="@id/createOrderFragment" />
        <action
            android:id="@+id/to_loginFragment"
            app:destination="@id/nav_login">
            <argument
                android:name="successLoginDirection"
                app:argType="com.bunbeauty.presentation.enums.SuccessLoginDirection" />
        </action>
        <action
            android:id="@+id/to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>

    <fragment
        android:id="@+id/createOrderFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.create_order.CreateOrderFragment"
        android:label="@string/title_create_order"
        tools:layout="@layout/fragment_create_order">
        <action
            android:id="@+id/to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/createOrderFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/to_createAddressFragment"
            app:destination="@id/createAddressFragment" />
        <action
            android:id="@+id/to_nav_address"
            app:destination="@id/nav_address">
            <argument
                android:name="isClickable"
                app:argType="boolean" />
        </action>
        <action
            android:id="@+id/to_deferredTimeBottomSheet"
            app:destination="@id/deferredTimeBottomSheet" />
        <action
            android:id="@+id/to_oneLineActionBottomSheet"
            app:destination="@id/oneLineActionBottomSheet" />
        <action
            android:id="@+id/to_cafeAddressesBottomSheet"
            app:destination="@id/cafeAddressesBottomSheet" />
    </fragment>

    <dialog
        android:id="@+id/deferredTimeBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.create_order.DeferredTimeBottomSheet"
        android:label="DeferredTimeBottomSheet"
        tools:layout="@layout/bottom_sheet_deferred_time">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="selectedHour"
            app:argType="integer" />
        <argument
            android:name="selectedMinute"
            app:argType="integer" />
    </dialog>

    <dialog
        android:id="@+id/cafeAddressesBottomSheet"
        android:name="com.bunbeauty.papakarlo.ui.fragment.address.CafeAddressesBottomSheet"
        android:label="CafeAddressesBottomSheet"
        tools:layout="@layout/bottom_sheet_cafe_addresses" />

</navigation>