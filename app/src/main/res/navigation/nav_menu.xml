<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.menu.MenuFragment"
        android:label="@string/title_menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/to_productFragment"
            app:destination="@id/productFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/productFragment"
        android:name="com.bunbeauty.papakarlo.ui.fragment.menu.ProductFragment"
        android:label="{menuProductName}"
        tools:layout="@layout/fragment_product">
        <argument
            android:name="menuProductUuid"
            app:argType="string" />
        <argument
            android:name="menuProductName"
            app:argType="string" />
        <argument
            android:name="photoLink"
            app:argType="string" />
    </fragment>

</navigation>