<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu"
    app:startDestination="@id/menu_fragment">

    <fragment
        android:id="@+id/cafe_list_fragment"
        android:name="com.bunbeauty.papakarlo.ui.cafe_list.CafeListFragment"
        android:label="@string/title_cafe_list"
        tools:layout="@layout/fragment_cafe_list" >
        <action
            android:id="@+id/to_cafeOptionsBottomSheet"
            app:destination="@id/cafeOptionsBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/menu_fragment"
        android:name="com.bunbeauty.papakarlo.ui.menu.MenuFragment"
        android:label="@string/title_main"
        tools:layout="@layout/fragment_menu" />
    <fragment
        android:id="@+id/orders_fragment"
        android:name="com.bunbeauty.papakarlo.ui.orders.OrdersFragment"
        android:label="@string/title_orders"
        tools:layout="@layout/fragment_orders" />
    <dialog
        android:id="@+id/cafeOptionsBottomSheet"
        tools:layout="@layout/bottom_sheet_cafe_options"
        android:name="com.bunbeauty.papakarlo.ui.cafe_options.CafeOptionsBottomSheet"
        android:label="CafeOptionsBottomSheet" >
        <argument
            android:name="cafeId"
            app:argType="string" />
    </dialog>


</navigation>