<resources>

    <!-- CARD -->

    <style name="BaseCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">@dimen/medium_radius</item>
    </style>

    <style name="MatchParentCard" parent="BaseCard">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MatchParentShadowlessCard" parent="MatchParentCard">
        <item name="cardElevation">@dimen/no_elevation</item>
    </style>

    <style name="MatchConstraintsCard" parent="BaseCard">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MatchConstraintsShadowlessCard" parent="MatchConstraintsCard">
        <item name="cardElevation">@dimen/no_elevation</item>
    </style>

    <style name="NavigationCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="iconColor">?attr/colorOnSurface</item>
        <item name="cardCornerRadius">@dimen/medium_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="ShadowlessNavigationCard" parent="NavigationCard">
        <item name="cardElevation">@dimen/no_elevation</item>
    </style>

    <style name="TextCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="textCardIconColor">?attr/colorOnSurface</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="cardCornerRadius">@dimen/medium_radius</item>
        <item name="innerMargin">@dimen/very_small_margin</item>
    </style>

    <style name="Switcher" parent="MatchConstraintsCard">
        <item name="buttonColor">?attr/colorPrimary</item>
        <item name="switcherMainTextColor">?attr/colorOnPrimary</item>
        <item name="switcherAlternativeTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="switcherButtonMargin">@dimen/small_margin</item>
        <item name="switcherButtonRadius">@dimen/small_radius</item>
        <item name="switcherHeight">@dimen/button_height</item>
    </style>

    <!-- INPUT LAYOUT -->

    <style name="MaterialInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
        <item name="boxStrokeColor">?attr/colorStroke</item>
    </style>

    <!-- INPUT -->

    <style name="MaterialInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/MediumRegularTextAppearance</item>
    </style>

    <!-- BUTTON -->

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">@dimen/medium_radius</item>
    </style>

    <style name="MainButton" parent="BaseButton">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ProgressButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="buttonTextAllCaps">true</item>
        <item name="buttonCornerRadius">@dimen/medium_radius</item>
        <item name="progressButtonColor">?attr/colorPrimary</item>
        <item name="progressButtonDisableColor">?attr/colorPrimary</item>
        <item name="progressButtonForegroundColor">?attr/colorOnPrimary</item>
        <item name="progressButtonDisableForegroundColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SmallButton" parent="BaseButton">
        <item name="android:layout_width">@dimen/small_button_width</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <!-- BOTTOM BAR -->

    <style name="BottomNavigation">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">?attr/colorNavigation</item>
        <item name="itemTextColor">?attr/colorNavigation</item>
    </style>

    <!--DEFAULT TEXT-->

    <style name="DefaultWrapConstraintsText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultWrapContentText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/colorPrimary</item>
    </style>

    <!--TEXT-->
    <!-- Naming: [Secondary][Size*][FontWeight*][Width*][Caps]Text -->
    <!-- Size* : Large, Medium, Small -->
    <!-- FontWeight* : Regular, Bold -->
    <!-- Width* : WrapConstrain, WrapContent -->
    <!-- * - required -->

    <style name="LargeBoldWrapContentText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/LargeBoldTextAppearance</item>
    </style>

    <style name="LargeBoldWrapConstraintText" parent="DefaultWrapConstraintsText">
        <item name="android:textAppearance">@style/LargeBoldTextAppearance</item>
    </style>

    <style name="LargeRegularWrapContentText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/LargeRegularTextAppearance</item>
    </style>

    <style name="LargeRegularWrapConstraintsText" parent="DefaultWrapConstraintsText">
        <item name="android:textAppearance">@style/LargeRegularTextAppearance</item>
    </style>

    <style name="MediumBoldWrapConstraintsText" parent="DefaultWrapConstraintsText">
        <item name="android:textAppearance">@style/MediumBoldTextAppearance</item>
    </style>

    <style name="MediumBoldWrapContentText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/MediumBoldTextAppearance</item>
    </style>

    <style name="MediumRegularWrapContentText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/MediumRegularTextAppearance</item>
    </style>

    <style name="MediumRegularWrapConstraintsText" parent="DefaultWrapConstraintsText">
        <item name="android:textAppearance">@style/MediumRegularTextAppearance</item>
    </style>

    <style name="SecondaryLargeRegularWrapContentText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/SecondaryLargeRegularTextAppearance</item>
    </style>

    <style name="SecondaryMediumBoldWrapContentText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/SecondaryMediumBoldTextAppearance</item>
    </style>

    <style name="SecondaryMediumRegularWrapContentText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/SecondaryMediumRegularTextAppearance</item>
    </style>

    <style name="SecondaryMediumRegularWrapContentCapsText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/SecondaryMediumRegularCapsTextAppearance</item>
    </style>

    <style name="SecondarySmallRegularWrapContentText" parent="DefaultWrapContentText">
        <item name="android:textAppearance">@style/SecondarySmallRegularTextAppearance</item>
    </style>

    <!--BOTTOM SHEET-->

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="BottomSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Blur">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@drawable/background_blur</item>
    </style>

</resources>