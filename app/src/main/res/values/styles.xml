<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hintColor</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="DefaultPage">
        <item name="android:background">@color/backgroundPage</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DefaultMaterialCard">
        <item name="background">@color/cardViewBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="MaterialInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
    </style>

    <style name="MaterialInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="MaterialAutoCompleteText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:background">@color/backgroundComponent</item>
    </style>
    <!-- BUTTON -->
    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="SmallButton" parent="MainButton">
        <item name="android:layout_width">@dimen/small_button_width</item>
    </style>

    <style name="OutLineButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/cardViewBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- FRAGMENT_PRODUCT -->
    <style name="TitleFragmentProduct">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="CostFragmentProduct">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="OldCostFragmentProduct" parent="CostFragmentProduct">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="GramFragmentProduct">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_light</item>
    </style>

    <style name="DescriptionFragmentProduct">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--TOP BAR-->
    <style name="TopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="titleTextColor">@color/mainTextColor</item>
    </style>

    <style name="TopBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- BOTTOM BAR -->
    <style name="BottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="elevation">10dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/selector_navigation</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
    </style>

    <!--PRODUCTS-->
    <style name="TitleElementProduct">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="CostElementProduct">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="OldCostElementProduct" parent="CostElementProduct">
        <item name="android:textColor">@color/grey</item>
    </style>

    <!--IMAGE VIEW-->
    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--CART PRODUCT-->
    <style name="TitleCartProduct">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="GramCartProduct">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="PriceCartProduct">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="OldPriceCartProduct" parent="PriceCartProduct">
        <item name="android:textColor">@color/grey</item>
    </style>

    <!--CREATION ADDRESS-->
    <style name="TitleCreationAddress">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

    <!--CREATION ORDER-->
    <style name="TextCreationOrder">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

    <style name="MaterialCardCreationOrder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cardViewBackground</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
        <item name="cornerRadius">@dimen/default_radius</item>
    </style>

    <!--TEXT-->
    <style name="BaseText">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainTitle" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="MainText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="SmallText" parent="BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="HelpText" parent="BaseText">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="CenterText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <!--CAFE-->
    <style name="MaterialCardContacts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cardViewBackground</item>
    </style>

    <style name="LinearLayoutContacts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <!--ORDER ELEMENT-->
    <style name="MaterialCardCreationAddress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cardViewBackground</item>
        <item name="cornerRadius">@dimen/default_radius</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

    <!--ADDRESS-->
    <style name="AddressElement">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--DIVIDER-->
    <style name="Divider">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>