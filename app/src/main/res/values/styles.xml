<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hintColor</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="AppTheme.LoadingScreen">
        <item name="android:windowBackground">@drawable/loading_screen</item>
    </style>

    <style name="DefaultPage">
        <item name="android:background">@color/backgroundPage</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--use ElementMaterialCard instead of this-->
    <style name="DefaultMaterialCard">
        <item name="cardBackgroundColor">@color/cardViewBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/medium_radius</item>
    </style>

    <style name="DefaultMaterialCardWithoutRadius">
        <item name="cardBackgroundColor">@color/cardViewBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ElementMaterialCard" parent="DefaultMaterialCard">
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/very_small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
    </style>

    <style name="MaterialInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
    </style>

    <style name="MaterialInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="MaterialAutoCompleteText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:background">@color/backgroundComponent</item>
    </style>
    <!-- BUTTON -->
    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/medium_radius</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="SmallButton">
        <item name="android:layout_width">@dimen/small_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/medium_radius</item>
    </style>

    <style name="OutLineButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_text_button_color</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="ActiveSwitcherButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_margin">@dimen/very_small_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- FRAGMENT_PRODUCT -->
    <style name="TitleFragmentProduct">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="CostFragmentProduct">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="OldCostFragmentProduct" parent="CostFragmentProduct">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="GramFragmentProduct">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_light</item>
    </style>

    <style name="DescriptionFragmentProduct">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--TOP BAR-->
    <style name="TopBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextColor">@color/mainTextColor</item>
    </style>

    <style name="TopBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- BOTTOM BAR -->
    <style name="BottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="elevation">10dp</item>
        <item name="itemIconTint">@color/selector_navigation</item>
        <item name="itemTextColor">@color/selector_navigation</item>
    </style>

    <!--PRODUCTS-->

    <style name="CostElementProduct">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="OldCostElementProduct" parent="CostElementProduct">
        <item name="android:textColor">@color/grey</item>
    </style>

    <!--IMAGE VIEW-->
    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--CART PRODUCT-->
    <style name="PriceCartProduct">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="OldPriceCartProduct" parent="PriceCartProduct">
        <item name="android:textColor">@color/grey</item>
    </style>

    <!--CREATION ADDRESS-->
    <style name="TitleCreationAddress">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

    <!--CREATION ORDER-->
    <style name="TextCreationOrder">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

    <!--TEXT-->
    <style name="BaseText">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainTitle" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="SmallTitle" parent="BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="MainText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="LargeMainText" parent="BaseText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="MainTextWrap" parent="MainText">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SmallText" parent="BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="HelpText" parent="BaseText">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="HelpTextCenter" parent="HelpText">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeBoldCenterText" parent="BaseText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="SecondaryText" parent="BaseText">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="SmallRegularText" parent="BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="SmallSecondaryText" parent="SecondaryText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="MediumRegularText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="MediumBoldText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="MediumSecondaryBoldText" parent="SecondaryText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <!--ORDER ELEMENT-->
    <style name="MaterialCardCreationAddress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cardViewBackground</item>
        <item name="cornerRadius">@dimen/medium_radius</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

    <!--ADDRESS-->
    <style name="AddressElement">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--DIVIDER-->
    <style name="Divider">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--BOTTOM SHEET-->

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DefaultBottomSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <!--ICON-->

    <style name="IconImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/mainTextColor</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
    </style>

    <!--TOOLBAR-->

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/mainTextColor</item>
    </style>

    <style name="BlurView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@drawable/background_blur</item>
    </style>

</resources>