<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hintColor</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="DefaultPage">
        <item name="android:background">@color/backgroundPage</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DefaultMaterialCard">
        <item name="background">@color/cardViewBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="MaterialInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
        <item name="boxStrokeColor">@color/hintColor</item>
        <item name="boxBackgroundColor">@color/backgroundComponent</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="startIconTint">@color/hintColor</item>
        <item name="hintTextColor">@color/iconTintColor</item>
        <item name="counterTextColor">@color/iconTintColor</item>
        <item name="helperTextTextColor">@color/iconTintColor</item>
    </style>

    <style name="MaterialInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:background">@color/backgroundComponent</item>
    </style>
    <!-- BUTTON -->
    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="SmallButton" parent="MainButton">
        <item name="android:layout_width">@dimen/small_button_width</item>
    </style>
    <!-- TEXT -->
    <style name="DefaultText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>
    <!-- FRAGMENT_PRODUCT -->
    <style name="TitleFragmentProduct">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="CostFragmentProduct">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="GramFragmentProduct">
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_light</item>
    </style>

    <style name="DescriptionFragmentProduct">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--TOP BAR-->
    <style name="TopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="titleTextColor">@color/mainTextColor</item>
    </style>

    <style name="TopBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- BOTTOM BAR -->

    <style name="BottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="elevation">10dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/selector_navigation</item>
    </style>

    <!--PRODUCTS-->
    <style name="TitleElementProduct">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="CostElementProduct">
        <item name="android:textSize">@dimen/very_small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--IMAGE VIEW-->

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <!--CONSUMER CART-->

    <!--CART PRODUCT-->
    <style name="TitleCartProduct">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="GramCartProduct">
        <item name="android:textSize">@dimen/very_small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="FullPriceCartProduct">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <!--CREATION ADDRESS-->
    <style name="TitleCreationAddress">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

    <!--CREATION ORDER-->
    <style name="TitleCreationOrder">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

    <style name="MaterialCardCreationOrder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundComponent</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
        <item name="cornerRadius">@dimen/default_radius</item>
    </style>

    <!--CONTACTS-->
    <style name="TextContacts">
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="MaterialCardContacts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundComponent</item>
    </style>

    <style name="LinearLayoutContacts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!--ORDER ELEMENT-->
    <style name="TitleOrderElement">
        <item name="android:textSize">@dimen/medium_margin</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="TimeOrderElement">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_light</item>
    </style>

    <style name="AddressOrderElement">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="CostOrderElement">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
    </style>

    <!--ORDER ELEMENT-->
    <style name="MaterialCardCreationAddress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundComponent</item>
        <item name="cornerRadius">@dimen/default_radius</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
    </style>

</resources>