<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:colorBackground">@color/light_grey</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:indeterminateTint">@color/orange</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/grey</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorStroke">@color/selector_stroke</item>
        <item name="colorNavigation">@color/selector_navigation</item>
        <item name="colorPin">@color/selector_pin</item>

        <item name="colorOpen">@color/green</item>
        <item name="colorCloseSoon">@color/yellow</item>
        <item name="colorClosed">@color/light_red</item>

        <item name="logo_top">@drawable/logo_top_papa_karlo</item>
        <item name="logo_start">@drawable/logo_start_papa_karlo</item>
        <item name="logo_login">@drawable/logo_login_papa_karlo</item>
        <item name="empty_profile">@drawable/empty_profile_papa_karlo</item>
        <item name="empty_cart">@drawable/empty_cart_papa_karlo</item>
    </style>

    <style name="LoadingAppTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@drawable/loading_screen_papa_karlo</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:colorBackground">@color/light_grey</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:indeterminateTint">@color/orange</item>

        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
</resources>