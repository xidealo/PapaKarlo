<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TEXT APPEARANCE -->
    <!-- Naming: [Secondary][Size*][FontWeight*][Caps]TextAppearance -->
    <!-- Size* : Large, Medium, Small -->
    <!-- FontWeight* : Regular, Bold -->
    <!-- * - required -->

    <style name="MediumRegularTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">@font/font_roboto_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallRegularTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/font_roboto_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>