<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorOnSurfaceVariant" format="reference|color" />
    <attr name="colorStroke" format="reference|color" />
    <attr name="colorNavigation" format="reference|color" />
    <attr name="logo_top" format="reference" />
    <attr name="logo_start" format="reference" />

    <declare-styleable name="ProgressButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonTextAllCaps" format="boolean" />
        <attr name="buttonCornerRadius" format="dimension" />
        <attr name="progressButtonColor" format="color" />
        <attr name="progressButtonForegroundColor" format="color" />
        <attr name="progressButtonDisableForegroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CountPicker">
        <attr name="pickerHeight" format="dimension" />
        <attr name="pickerWidth" format="dimension" />
        <attr name="pickerColor" format="color" />
        <attr name="buttonTextColor" format="color" />
        <attr name="count" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomSwitcher">
        <attr name="backgroundColor" format="reference|color" />
        <attr name="buttonColor" format="reference|color" />
        <attr name="switcherMainTextColor" format="reference|color" />
        <attr name="switcherAlternativeTextColor" format="reference|color" />
        <attr name="leftButtonText" format="string" />
        <attr name="rightButtonText" format="string" />
        <attr name="switcherHeight" format="dimension" />
        <attr name="switcherButtonMargin" format="dimension" />
        <attr name="switcherButtonRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="NavigationCard">
        <attr name="android:text" />
        <attr name="android:icon" />
        <attr name="iconColor" format="color" />
        <attr name="android:padding" />
    </declare-styleable>

    <declare-styleable name="TextCard">
        <attr name="android:hint" />
        <attr name="android:text" />
        <attr name="android:icon" />
        <attr name="textCardIconColor" format="color" />
        <attr name="android:padding" />
        <attr name="android:textColor" />
        <attr name="hintTextColor" format="color" />
        <attr name="innerMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ProcessScaleView">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="stepCount" format="integer" />
    </declare-styleable>
</resources>