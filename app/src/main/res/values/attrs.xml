<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressButton">
        <attr name="android:text" />
        <attr name="android:enabled" />
        <attr name="android:layout_width" />
        <attr name="android:layout_height" />
        <attr name="android:fontFamily" />
        <attr name="android:textAllCaps" />
        <attr name="android:layout_marginStart" />
        <attr name="android:layout_marginEnd" />
        <attr name="android:layout_marginTop" />
        <attr name="android:layout_marginBottom" />
        <attr name="android:backgroundTint" />
        <attr name="cornerRadius" />
    </declare-styleable>

    <declare-styleable name="CountPicker">
        <attr name="elementSize" format="dimension" />
        <attr name="buttonColor" format="color" />
        <attr name="buttonTextColor" format="color" />
        <attr name="count" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomSwitcher">
        <!--<attr name="backgroundWidth" format="dimension" />
        <attr name="backgroundHeight" format="dimension" />-->
        <attr name="backgroundRadius" format="dimension" />
        <attr name="switcherColor" format="color" />
        <attr name="switcherPadding" format="dimension" />
        <attr name="isLeft" format="boolean" />
        <attr name="buttonWidth" format="dimension" />
        <attr name="buttonHeight" format="dimension" />
        <attr name="buttonRadius" format="dimension" />
        <attr name="buttonTextSize" format="dimension" />
        <attr name="activeTextColor" format="color" />
        <attr name="inactiveTextColor" format="color" />
        <attr name="activeColor" format="color" />
        <attr name="rightButtonText" format="string" />
        <attr name="leftButtonText" format="string" />
    </declare-styleable>
</resources>