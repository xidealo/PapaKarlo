<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressButton">
        <attr name="android:text" />
        <attr name="android:enabled" />
        <attr name="android:layout_width" />
        <attr name="android:layout_height" />
        <attr name="android:fontFamily" />
        <attr name="android:textAllCaps" />
        <attr name="android:layout_marginStart" />
        <attr name="android:layout_marginEnd" />
        <attr name="android:layout_marginTop" />
        <attr name="android:layout_marginBottom" />
        <attr name="android:backgroundTint" />
        <attr name="cornerRadius" />
    </declare-styleable>

    <declare-styleable name="CountPicker">
        <attr name="pickerHeight" format="dimension" />
        <attr name="pickerWidth" format="dimension" />
        <attr name="pickerColor" format="color" />
        <attr name="buttonTextColor" format="color" />
        <attr name="count" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomSwitcher">
        <attr name="backgroundColor" format="color" />
        <attr name="buttonColor" format="color" />
        <attr name="switcherMainTextColor" format="color" />
        <attr name="switcherAlternativeTextColor" format="color" />
        <attr name="leftButtonText" format="string" />
        <attr name="rightButtonText" format="string" />
        <attr name="switcherHeight" format="dimension" />
        <attr name="switcherButtonMargin" format="dimension" />
        <attr name="switcherButtonRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="NavigationCard">
        <attr name="android:text" />
        <attr name="android:icon" />
        <attr name="iconColor" format="color" />
        <attr name="android:padding"/>
    </declare-styleable>

    <declare-styleable name="TextCard">
        <attr name="android:hint" />
        <attr name="android:text" />
        <attr name="android:padding"/>
        <attr name="android:textColor"/>
        <attr name="hintTextColor" format="color" />
        <attr name="innerMargin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ProcessScaleView">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="stepCount" format="integer" />
    </declare-styleable>
</resources>