<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/DefaultBottomSheet"
        tools:context=".ui.CafeOptionsBottomSheet">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_sheet_cafe_options_mcv_call"
            style="@style/DefaultMaterialCard"
            android:layout_marginTop="@dimen/medium_margin"
            app:cardCornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/large_padding">

                <TextView
                    android:id="@+id/bottom_sheet_cafe_options_tv_call"
                    style="@style/MainText"
                    android:layout_width="0dp"
                    android:text="@string/title_cafe_options_call"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/bottom_sheet_cafe_options_iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_solid"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_cafe_options_tv_call"
                    app:layout_constraintEnd_toEndOf="@+id/bottom_sheet_cafe_options_tv_call"
                    app:layout_constraintTop_toTopOf="@+id/bottom_sheet_cafe_options_tv_call" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_sheet_cafe_options_mcv_show_map"
            style="@style/DefaultMaterialCard"
            app:cardCornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_cafe_options_mcv_call">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/large_padding">

                <TextView
                    android:id="@+id/bottom_sheet_cafe_options_tv_show_map"
                    style="@style/MainText"
                    android:layout_width="0dp"
                    android:text="@string/title_cafe_options_show_map"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/bottom_sheet_cafe_options_iv_show_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_solid"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_cafe_options_tv_show_map"
                    app:layout_constraintEnd_toEndOf="@+id/bottom_sheet_cafe_options_tv_show_map"
                    app:layout_constraintTop_toTopOf="@+id/bottom_sheet_cafe_options_tv_show_map" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
