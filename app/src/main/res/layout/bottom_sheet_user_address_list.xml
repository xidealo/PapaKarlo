<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BottomSheet"
    tools:context=".feature.address.user_address_list.UserAddressListBottomSheet">

    <TextView
        android:id="@+id/bottom_sheet_user_addresses_tv_title"
        style="@style/LargeBoldWrapContentText"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/title_user_addresses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottom_sheet_user_addresses_rv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_user_addresses_tv_title"
        tools:itemCount="2"
        tools:listitem="@layout/element_address" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bottom_sheet_user_addresses_btn_create_address"
        style="@style/FAButton"
        android:layout_margin="@dimen/medium_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_user_addresses_tv_title"
        app:layout_constraintVertical_bias="1"
        app:srcCompat="@drawable/ic_add" />

</androidx.constraintlayout.widget.ConstraintLayout>
