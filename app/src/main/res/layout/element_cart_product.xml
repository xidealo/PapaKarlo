<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="context"
            type="android.content.Context" />

        <variable
            name="cartProduct"
            type="com.bunbeauty.papakarlo.data.model.CartProduct" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/element_cart_product_mcv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/element_cart_product_iv_photo"
                android:layout_width="@dimen/image_element_size"
                android:layout_height="@dimen/image_element_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:image="@{cartProduct.menuProduct.photoLink}" />

            <TextView
                android:id="@+id/element_cart_product_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cartProduct.menuProduct.name}"
                app:layout_constraintStart_toEndOf="@id/element_cart_product_iv_photo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_cart_product_tv_full_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cartProduct.fullPrice}"
                app:layout_constraintStart_toEndOf="@id/element_cart_product_iv_photo"
                app:layout_constraintTop_toBottomOf="@+id/element_cart_product_tv_title" />

            <TextView
                android:id="@+id/element_cart_product_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cartProduct.count}"
                app:layout_constraintStart_toEndOf="@id/element_cart_product_iv_photo"
                app:layout_constraintTop_toBottomOf="@+id/element_cart_product_tv_full_price" />

            <com.bunbeauty.papakarlo.ui.view.CountPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>