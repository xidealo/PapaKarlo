<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/DefaultPage"
        tools:context=".ui.CreateOrderFragment">

        <ScrollView
            android:id="@+id/fragment_create_order_sv_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding">

                <com.bunbeauty.papakarlo.ui.view.CustomSwitcher
                    android:id="@+id/fragment_create_order_cs_delivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:backgroundColor="@color/white"
                    app:buttonColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/medium_radius"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:leftButtonText="@string/action_create_order_delivery"
                    app:rightButtonText="@string/action_create_order_pickup"
                    app:switcherAlternativeTextColor="@color/secondaryTextColor"
                    app:switcherButtonMargin="@dimen/very_small_margin"
                    app:switcherButtonRadius="@dimen/medium_radius"
                    app:switcherHeight="@dimen/switcher_height"
                    app:switcherMainTextColor="@color/white" />

                <com.bunbeauty.papakarlo.ui.view.NavigationCard
                    android:id="@+id/fragment_create_order_nc_phone"
                    style="@style/NavigationCard"
                    android:layout_marginTop="@dimen/small_margin"
                    android:icon="@drawable/ic_right_arrow"
                    android:text="@string/action_create_order_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_create_order_cs_delivery" />

                <com.bunbeauty.papakarlo.ui.view.NavigationCard
                    android:id="@+id/fragment_create_order_nc_add_address"
                    style="@style/NavigationCard"
                    android:layout_marginTop="@dimen/small_margin"
                    android:icon="@drawable/ic_add"
                    android:text="@string/action_create_order_address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_create_order_nc_phone" />

                <com.bunbeauty.papakarlo.ui.view.TextCard
                    android:id="@+id/fragment_create_order_tc_address"
                    style="@style/TextCard"
                    android:hint="@string/hint_create_order_address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/small_margin"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_create_order_nc_add_address"
                    tools:text="улица Чапаева, д 22А, кв 15" />

                <com.bunbeauty.papakarlo.ui.view.NavigationCard
                    android:id="@+id/fragment_create_order_nc_add_deferred_time"
                    style="@style/NavigationCard"
                    android:layout_marginTop="@dimen/small_margin"
                    android:icon="@drawable/ic_right_arrow"
                    android:text="@string/action_create_order_delivery_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_create_order_tc_address" />

                <com.bunbeauty.papakarlo.ui.view.TextCard
                    android:id="@+id/fragment_create_order_tc_deferred_time"
                    style="@style/TextCard"
                    android:hint="@string/hint_create_order_delivery_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/small_margin"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_create_order_nc_add_deferred_time"
                    tools:text="Как можно скорее" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragment_create_order_btn_create_order"
                    style="@style/MainButton"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_create_order_tc_deferred_time"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/fragment_create_order_pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>