<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="com.bunbeauty.papakarlo.data.model.MenuProduct" />

        <variable
            name="iStringHelper"
            type="com.bunbeauty.papakarlo.utils.string.IStringHelper" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_product_cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.product.ProductFragment">

        <ImageView
            android:id="@+id/fragment_product_iv_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@id/fragment_product_gl_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:image="@{product.photoLink}" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_product_gl_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_product_gl_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/medium_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_product_gl_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/medium_margin" />

        <TextView
            android:id="@+id/fragment_product_tv_title"
            style="@style/TitleFragmentProduct"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="@{product.name}"
            app:layout_constraintEnd_toEndOf="@id/fragment_product_gl_right"
            app:layout_constraintStart_toStartOf="@id/fragment_product_gl_left"
            app:layout_constraintTop_toBottomOf="@id/fragment_product_gl_top" />

        <TextView
            android:id="@+id/fragment_product_tv_cost"
            style="@style/CostFragmentProduct"
            android:text="@{iStringHelper.toStringCost(product)}"
            app:layout_constraintEnd_toEndOf="@id/fragment_product_gl_right"
            app:layout_constraintStart_toStartOf="@id/fragment_product_gl_left"
            app:layout_constraintTop_toBottomOf="@id/fragment_product_tv_title" />

        <TextView
            android:id="@+id/fragment_product_tv_gram"
            style="@style/GramFragmentProduct"
            android:text="@{iStringHelper.toStringWeight(product)}"
            app:layout_constraintEnd_toEndOf="@id/fragment_product_gl_right"
            app:layout_constraintStart_toStartOf="@id/fragment_product_gl_left"
            app:layout_constraintTop_toBottomOf="@id/fragment_product_tv_cost" />

        <ImageView
            android:id="@+id/element_menu_product_iv_on_fire"
            style="@style/Icon"
            android:layout_marginTop="@dimen/small_margin"
            android:src="@drawable/ic_on_fire"
            android:visibility="@{product.onFire ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="@id/fragment_product_gl_left"
            app:layout_constraintTop_toBottomOf="@id/fragment_product_tv_gram" />

        <ImageView
            android:id="@+id/element_menu_product_iv_in_oven"
            style="@style/Icon"
            android:layout_marginTop="@dimen/small_margin"
            android:src="@drawable/ic_in_oven"
            android:visibility="@{product.inOven ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="@id/fragment_product_gl_left"
            app:layout_constraintTop_toBottomOf="@id/fragment_product_tv_gram" />

        <TextView
            android:id="@+id/fragment_product_tv_description"
            style="@style/MainText"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@{product.description}"
            app:layout_constraintEnd_toEndOf="@id/fragment_product_gl_right"
            app:layout_constraintStart_toStartOf="@id/fragment_product_gl_left"
            app:layout_constraintTop_toBottomOf="@id/element_menu_product_iv_on_fire" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_product_btn_add"
            style="@style/MainButton"
            android:text="@string/action_product_want"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/fragment_product_gl_right"
            app:layout_constraintStart_toStartOf="@id/fragment_product_gl_left" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>