<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/DefaultBottomSheet">

        <TextView
            android:id="@+id/bottom_sheet_logout_tv_title"
            style="@style/MediumBoldCenterText"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="@string/title_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottom_sheet_logout_btn_logout"
            style="@style/MainButton"
            android:text="@string/action_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_logout_tv_title" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_sheet_logout_cv_cancel"
            style="@style/MaterialCardWithoutShadow"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_logout_btn_logout">

            <TextView
                android:id="@+id/bottom_sheet_logout_tv_cancel"
                style="@style/MediumSecondaryRegularText"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/action_logout_cancel"
                android:textAllCaps="true" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
