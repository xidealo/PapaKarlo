<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="context"
            type="android.content.Context" />

        <variable
            name="address"
            type="com.bunbeauty.papakarlo.data.model.Address" />

        <variable
            name="iStringHelper"
            type="com.bunbeauty.papakarlo.utils.string.IStringHelper" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/element_address_mcv_main"
        style="@style/DefaultMaterialCard">
        <TextView
            style="@style/MainText"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/medium_margin"
            android:drawablePadding="@dimen/medium_padding"
            android:text="@{iStringHelper.toString(address)}"/>
    </com.google.android.material.card.MaterialCardView>
</layout>