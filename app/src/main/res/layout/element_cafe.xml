<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="cafe"
            type="com.bunbeauty.papakarlo.data.model.cafe.Cafe" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        app:cardCornerRadius="@dimen/large_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/medium_padding">

            <TextView
                android:id="@+id/fragment_contacts_tv_address"
                style="@style/MainTitle"
                android:drawablePadding="@dimen/medium_padding"
                android:text="@{cafe.address.getAddressString()}"
                app:drawableLeftCompat="@drawable/ic_contact"
                app:drawableTint="@color/mainTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Address" />

            <TextView
                android:id="@+id/fragment_contacts_tv_work_time"
                style="@style/MainText"
                android:drawablePadding="@dimen/medium_padding"
                android:text="@{cafe.cafeEntity.getWorkingHoursString()}"
                app:drawableLeftCompat="@drawable/ic_clock"
                app:drawableTint="@color/mainTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_contacts_tv_address"
                tools:text="10:00 - 20:00" />

            <TextView
                android:id="@+id/fragment_contacts_tv_phone"
                style="@style/MainText"
                android:drawablePadding="@dimen/medium_padding"
                android:text="@{cafe.cafeEntity.phone}"
                app:drawableLeftCompat="@drawable/ic_phone"
                app:drawableTint="@color/mainTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_contacts_tv_work_time"
                tools:text="8 (910) 000-00-00" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>



