<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="context"
            type="android.content.Context" />

        <variable
            name="order"
            type="com.bunbeauty.papakarlo.data.model.order.Order" />

        <variable
            name="iStringHelper"
            type="com.bunbeauty.papakarlo.utils.string.IStringHelper" />
    </data>

    <com.google.android.material.card.MaterialCardView style="@style/DefaultMaterialCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/small_padding">

            <TextView
                android:id="@+id/element_order_tv_time"
                style="@style/MainText"
                android:text="@{iStringHelper.toStringTime(order.orderEntity)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_order_tv_code"
                style="@style/MainTitle"
                android:text="@{order.orderEntity.code}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_order_tv_order"
                style="@style/MainText"
                android:text="@{iStringHelper.toString(order.orderEntity)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_order_tv_code" />

            <TextView
                android:id="@+id/element_order_tv_address"
                style="@style/MainText"
                android:text="@{iStringHelper.toString(order.orderEntity.address)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_order_tv_order" />

            <TextView
                android:id="@+id/element_order_tv_structure"
                style="@style/MainText"
                android:text="@{iStringHelper.toString(order.cartProducts)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_order_tv_address" />

            <TextView
                android:id="@+id/element_order_tv_full_price"
                style="@style/MainText"
                android:text="@{iStringHelper.toStringFullPrice(order)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_order_tv_structure" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>