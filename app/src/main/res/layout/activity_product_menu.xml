<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.ProductMenuActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.bunbeauty.papakarlo.view_model.ProductMenuViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_product_menu_cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/activity_main_tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.tabs.TabItem
                style="@style/Widget.AppCompat.ActionBar.TabBar"
                android:layout_width="match_parent"
                android:text="Все" />

            <com.google.android.material.tabs.TabItem
                style="@style/Widget.AppCompat.ActionBar.TabBar"
                android:text="Пицца" />

            <com.google.android.material.tabs.TabItem
                style="@style/Widget.AppCompat.ActionBar.TabBar"
                android:text="Бургеры" />

            <com.google.android.material.tabs.TabItem
                style="@style/Widget.AppCompat.ActionBar.TabBar"
                android:text="Картофель" />

            <com.google.android.material.tabs.TabItem
                style="@style/Widget.AppCompat.ActionBar.TabBar"
                android:text="На углях" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/activity_main_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_main_tl" />

        <ProgressBar
            android:id="@+id/fragment_profile_pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:isLoading="@{viewModel.isLoading}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>